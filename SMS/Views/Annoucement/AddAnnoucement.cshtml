@section Scripts {
   
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
   
    <script>
        $(document).ready(function () {
            $(".datepicker").datepicker({
                dateFormat: "dd-mm-yy",
                changemonth: true,
                changeyear: true
            });
        });
    </script>
}
