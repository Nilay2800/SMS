@model IEnumerable<SMS.Model.AnnoucementModel>

@{
    ViewBag.Title = "Index";
}

<h2>AnnoucementList</h2>

<p>
    @Html.ActionLink("Create New", "AddAnnoucement", null, htmlAttributes: new { @class = "mybtn" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AnnoucementDetail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AnnoucementDetail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditAnnoucement", new { id = item.Id }, htmlAttributes: new { @class = "mybtn" }) |
                @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "mybtn" })
            </td>
        </tr>
        <style type="text/css">
            a.mybtn {
                background: #777;
                color: #fff;
                display: inline-block;
                padding: 6px 12px 6px 12px;
                text-decoration: none;
            }
        </style>
    }

</table>
