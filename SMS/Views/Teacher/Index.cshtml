@model IEnumerable<SMS.Model.Teacher>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Teacher List</h2>

<p>
    @Html.ActionLink("Create New", "AddTeacher", new { }, htmlAttributes: new { @class = "Mybtn" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MobileNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditTeacher", new { id = item.Id },  htmlAttributes: new { @class = "Mybtn" }) |

                @Html.ActionLink("Delete", "Delete", new { id = item.Id },  htmlAttributes: new { @class = "Mybtn" })
            </td>
        </tr>
        <style>
            a.Mybtn {
                background: #777;
                color: #fff;
                display: inline-block;
                padding: 6px 12px 6px 12px;
                text-decoration: none;
            }
        </style>

    }

</table>
