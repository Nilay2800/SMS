@model IEnumerable<SMS.Model.RoleModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Role List</h2>

<p>
    @Html.ActionLink("Create New", "CreateRole", null, htmlAttributes: new { @class = "Mybtn" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.RoleCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.RoleCode)
    </td>
    <td>
        <input type="checkbox" value="@item.IsActive" @(item.IsActive == false ? "" : "checked='checked'") class="Checkbox" onclick="CheckValue(@item.IsActive)" id="View_@item.IsActive" />
    </td>

    <td>
        @Html.ActionLink("AllowPermission", "ViewPermission", "FormRoleMapping", new { id = item.Id }, htmlAttributes: new { @class = "Mybtn" })

    </td>
</tr>
    }
    <style>
        a.Mybtn {
            background: #777;
            color: #fff;
            display: inline-block;
            padding: 6px 12px 6px 12px;
            text-decoration: none;
        }
    </style>

</table>
