@model SMS.Model.ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
@*<html lang="en">*@
<head>
    <title>@ViewBag.Title</title>
    <!-- Main Stylesheet -->
    @*<link type="text/css" rel="stylesheet" href="@Url.Content("~/Content/css/style.css")" />*@
    @*<link type="text/css" rel="stylesheet" href="@Url.Content("~/Content/css/login.css")" />*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

</head>

<body>
    

    
    <div class="loginwrapper">
        <div class="loginmiddel_box">
            <div class="loginbox">
                <div class="loginPageLogo">
                   
                </div>
                @if (!String.IsNullOrWhiteSpace(ViewBag.Success))
                {
                    <label class="bg-success text-white alertmsg">@ViewBag.Success</label>
                }
                @if (!String.IsNullOrWhiteSpace(ViewBag.Error))
                {
                    <label class="bg-error text-white alertmsg">@ViewBag.Error</label>
                }
                @if (!String.IsNullOrWhiteSpace(ViewBag.MailSentSuccess))
                {
                    <label class="bg-success text-white alertmsg">@ViewBag.MailSentSuccess</label>
                }

                @using (Html.BeginForm(new { returnUrl = ViewBag.ReturnUrl }))
                {
                    <div class="logininputs">
                        <div class="inputbox">
                            <label for="Username">Email-Id</label>
                            <div class="div_input">
                                @Html.TextBoxFor(m => m.EmailId, new { @placeholder = "Username" })
                                @Html.ValidationMessageFor(m => m.EmailId)
                            </div>
                        </div>
                        <div class="inputbox button_div">
                            <label for="">&nbsp;</label>
                            <div class="div_input">
                                <input type="submit" value="Send" class="button button_primary">
                            </div>
                        </div>
                        <small><a href="@Url.Action("Login","Account")" class="backlink">Back to Login</a></small>
                    </div>
                }
            </div>
        </div>
    </div>

</body>


<script>

    $(document).ready(function () {
        var successElement = $(".alertmsg");
        if (successElement) {
            setTimeout(function () { successElement.hide(); }, 7000);
        }
    });


</script>
